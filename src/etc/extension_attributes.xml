<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Api/etc/extension_attributes.xsd">
    <extension_attributes for="Magento\Quote\Api\Data\CartInterface">
        <attribute code="custom_fees" type="JosephLeedy\CustomFees\Api\Data\CustomOrderFeeInterface[]"/>
    </extension_attributes>
    <extension_attributes for="Magento\Quote\Api\Data\TotalSegmentInterface">
        <attribute code="custom_fee_segments" type="Magento\Quote\Api\Data\TotalSegmentInterface[]"/>
    </extension_attributes>
    <extension_attributes for="Magento\Sales\Api\Data\CreditmemoInterface">
        <attribute code="refunded_custom_fees" type="JosephLeedy\CustomFees\Api\Data\CustomOrderFee\RefundedInterface[]"/>
    </extension_attributes>
    <extension_attributes for="Magento\Sales\Api\Data\InvoiceInterface">
        <attribute code="invoiced_custom_fees" type="JosephLeedy\CustomFees\Api\Data\CustomOrderFee\InvoicedInterface[]"/>
    </extension_attributes>
    <extension_attributes for="Magento\Sales\Api\Data\OrderInterface">
        <attribute code="custom_order_fees" type="JosephLeedy\CustomFees\Api\Data\CustomOrderFeesInterface">
            <join reference_table="custom_order_fees" reference_field="order_entity_id" join_on_field="entity_id">
                <field>id</field>
                <field column="order_entity_id">order_id</field>
                <field>custom_fees_ordered</field>
                <field>custom_fees_invoiced</field>
                <field>custom_fees_refunded</field>
            </join>
        </attribute>
    </extension_attributes>
</config>
